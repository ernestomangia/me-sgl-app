@model ME.Libros.Web.Models.ClienteViewModel

<h2>Nuevo cliente</h2>
<form class="form-horizontal">
    <div class="form-group form-group-sm">
        @Html.LabelFor(c => c.Nombre, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Nombre, new { @class = "form-control", placeholder = "Nombre" })
        </div>
    </div>
    <div class="form-group form-group-sm">
        @Html.LabelFor(c => c.Apellido, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Apellido, new { @class = "form-control", placeholder = "Apellido" })
        </div>
    </div>
    <div class="form-group form-group-sm">
        @Html.LabelFor(c => c.Cuil, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Cuil, new { @class = "form-control", placeholder = "Cuil" })
        </div>
    </div>
    <div class="form-group form-group-sm">
        @Html.LabelFor(c => c.Localidad, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Localidad, new { @class = "form-control", placeholder = "Localidad" })
        </div>
    </div>
    <div class="form-group form-group-sm">
        @Html.LabelFor(c => c.Direccion, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Direccion, new { @class = "form-control", placeholder = "Dirección" })
        </div>
    </div>
</form>

<form class="form-horizontal">
    <div class="form-group form-group-lg">
        <label class="col-sm-2 control-label" for="formGroupInputLarge">Large label</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="formGroupInputLarge" placeholder="Large input">
        </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="formGroupInputSmall">Small label</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="formGroupInputSmall" placeholder="Small input">
        </div>
    </div>
</form>
