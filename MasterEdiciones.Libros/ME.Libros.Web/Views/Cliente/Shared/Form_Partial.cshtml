@model ME.Libros.Web.Models.ClienteViewModel
@if (Model.Id > 0)
{
    <div class="form-group form-group-sm">
        @Html.LabelFor(c => c.Id, new { @class = "col-sm-1 control-label" })
        <div class="col-sm-3">
            @Html.TextBoxFor(c => c.Id, new { @class = "form-control", disabled = "disabled" })
        </div>
    </div>
}
<div class="form-group form-group-sm">
    @Html.LabelFor(c => c.Nombre, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Nombre, new { @class = "form-control", placeholder = "Nombre", required = "required" })
    </div>
    @Html.LabelFor(c => c.Apellido, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Apellido, new { @class = "form-control", placeholder = "Apellido", required = "required" })
    </div>
</div>
<div class="form-group form-group-sm">
    @Html.LabelFor(c => c.Cuil, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Cuil, new { @class = "form-control", placeholder = "Cuil", required = "required" })
    </div>
    @Html.LabelFor(c => c.Sexo, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.EnumDropDownListFor(c => c.Sexo, new { @class = "form-control", required = "required" })
    </div>
</div>
<div class="form-group form-group-sm">
    @Html.LabelFor(c => c.ProvinciaId, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.DropDownListFor(l => l.ProvinciaId, Model.Provincias, "Seleccione", new { @class = "form-control", placeholder = "Provincia", required = "required" })
    </div>
    @Html.LabelFor(c => c.LocalidadId, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.DropDownListFor(l => l.LocalidadId, Model.Localidades, "Seleccione", new { @class = "form-control", placeholder = "Localidad", required = "required" })
    </div>
</div>
<div class="form-group form-group-sm">
    @Html.LabelFor(c => c.Direccion, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Direccion, new { @class = "form-control", placeholder = "Dirección", required = "required" })
    </div>
    @Html.LabelFor(c => c.Barrio, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Barrio, new { @class = "form-control", placeholder = "Barrio" })
    </div>
    @Html.LabelFor(c => c.Manzana, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-1">
        @Html.TextBoxFor(c => c.Manzana, new { @class = "form-control", placeholder = "Manzana" })
    </div>
</div>
<div class="form-group form-group-sm">
    @Html.LabelFor(c => c.Email, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
    </div>
</div>
<div class="form-group form-group-sm">
    @Html.LabelFor(c => c.TelefonoFijo, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.TelefonoFijo, new { @class = "form-control", type = "tel", placeholder = "Teléfono" })
    </div>
    @Html.LabelFor(c => c.Celular, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(c => c.Celular, new { @class = "form-control", type = "tel", placeholder = "Celular" })
    </div>
</div>

<div id="error" class="alert alert-danger error" role="alert">
    <ul></ul>
</div>

<script type="text/javascript">
    $("#ProvinciaId").on("change", function() {
        $.ajax({
            method: "GET",
            url: '@Url.Action("ListaLocalidades", "Cliente")' + "?id=" + $("#ProvinciaId :selected").attr("value"),
            dataType: "json",
            error: function (text, error) {
                mensajeError("Ha ocurrido un error: " + text + error);
            },
            success: function (data) {
                alert(data);
                //$("#LocalidadId").empty();
                //$.each(data, function(key, value) {
                //    $("#LocalidadId").append(new Option(key, value));
                //});
            },
            timeout: 10000,
            cache: false
        });
    });
</script>
