    </div>
    @Html.LabelFor(c => c.Sexo, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.EnumDropDownListFor(c => c.Sexo, new { @class = "form-control", required = "required" })
    </div>
</div>
