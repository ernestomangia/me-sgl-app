@model IEnumerable<ME.Libros.Web.Models.CobroViewModel>

    <h3>Cobros</h3>
    <a class="btn btn-success btnNuevo" href="@Url.Action("Crear")" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Nuevo
    </a>

    <table class="dataTableCustom">
        <thead>
            <tr>
                <th class="columnaCodigo no-sort">@Html.DisplayNameFor(model => model.Id)</th>
                <th>N° Venta</th>
                <th>Cliente</th>
                <th>@Html.DisplayNameFor(model => model.Monto)</th>
                <th>Cobrador</th>
                <th>@Html.DisplayNameFor(model => model.FechaCobro)</th>
                <th>Estado</th>
                <th class="columnaAcciones">Acciones</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr id=@("tr_"+ item.Id)>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Venta.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Venta.Cliente.Apellido), @Html.DisplayFor(modelItem => item.Venta.Cliente.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                <td>@Html.DisplayFor(modelItem => item.Cobrador.Apellido), @Html.DisplayFor(modelItem => item.Cobrador.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCobro)</td>
                <td class="CambioEstado">@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>
                    <a class="btn btn-warning btn-sm btnModificar" type="button" href="@Url.Action("Modificar", new {id = item.Id})" title="Detalle del cobro">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <button class="btn btn-danger btn-sm btnEliminar" type="button" data-toggle="modal" data-target="#modalAnular" onclick="javascript:setearId(@item.Id);">
                        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </table>

    @Html.Partial("Eliminar")
<input type="hidden" id="idEntidad" />
<input type="hidden" id="idEntidadNoBorrarFila" value="1" />

