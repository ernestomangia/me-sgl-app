@using ME.Libros.Utils.Enums
@model ME.Libros.Web.Models.CompraViewModel

<script src="~/Scripts/compra.js"></script>

<h2>Modificar compra</h2>
@using (Html.BeginForm("Modificar", "Compra", FormMethod.Post, new { id = "formCompra", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("CompraPagada/Shared/Form_Partial", Model)

    @Html.HiddenFor(model => model.MontoCalculado)
    @Html.HiddenFor(model => model.MontoComprado)
    @Html.HiddenFor(model => model.ProveedorId)

    <div class="row">
        <div class="col-md-12">
            <div class="text-right">
                @if (Model.EsPagada)
                {

                    <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalEliminarCompra" title="Anular compra">
                        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                        Anular
                    </button>
                }
                <a class="btn btn-default btnCancelar" href="@Url.Action("Index", new { estado = ViewBag.MenuId == 26
                                                                 ? (EstadoCompra?) null
                                                                 : Model.Estado})" title="Cancelar">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
                @if (Model.EsPagada)
                {
                    <button type="submit" class="btn btn-warning" title="Modificar compra">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Modificar
                    </button>
                }
            </div>
        </div>
    </div>
}

<div id="contenedorCompraItem"></div>
@Html.Hidden("idEntidad", Model.Id, new { id = "idEntidad" })
@Html.Partial("Eliminar")

<script type="text/javascript">
    $(document).ready(function () {
        $("#FechaCompra").attr("disabled", "disabled");
        $("#ProveedorId").attr("disabled", "disabled");
        $("#MontoComprado").attr("disabled", "disabled");
        $(".disabled").attr("disabled", "disabled");
    });
</script>
