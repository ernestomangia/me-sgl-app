@model IEnumerable<ME.Libros.Web.Models.CompraItemViewModel>

    @if (!Model.Any())
    {
        <a id="btnNuevoCompraItem" class="btn btn-sm btn-success btnNuevo" data-toggle="modal" data-target="#" role="button">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            Agregar item
        </a>
    }
    <table id="compraDetalleTable" @*class="dataTableCustom2"*@>
        <thead>
            <tr>
                <th class="columnaCodigo">@Html.DisplayNameFor(model => model.Orden)</th>
                <th>@Html.DisplayNameFor(model => model.ProductoId)</th>
                <th class="numero">@Html.DisplayNameFor(model => model.Cantidad)</th>
                <th class="moneda">@Html.DisplayNameFor(model => model.PrecioCosto)</th>
                <th class="moneda" style="width: 150px;">@Html.DisplayNameFor(model => model.Monto)</th>
                <th class="columnaAcciones">Acciones</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th colspan="4" style="text-align:right">Total:</th>
                <th class="text-right">@*@Model.Sum(vi => vi.MontoItemVendido)*@</th>
                <th></th>
            </tr>
        </tfoot>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Orden</td>
                <td>@item.Producto.Nombre</td>
                <td class="text-right">@Html.DisplayFor(c => item.Cantidad)</td>
                <td class="text-right">@Html.DisplayFor(c => item.PrecioCosto)</td>
                <td class="text-right">@Html.DisplayFor(c => item.Monto)</td>
                <td>
                    <a class="btn btn-warning btn-sm btnModificar" type="button" href="@Url.Action("Modificar", new { id = item.Id})" title="Modificar item">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>
        }
    </table>
    <input type="hidden" id="idEntidad" />
    @*@Html.Partial("Eliminar")*@

    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
