@model ME.Libros.Web.Models.ConfiguracionViewModel

<h3 class="page-header">Configuraciones</h3>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Backup</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateBackup", "Configuracion", FormMethod.Post, new { id = "formConfiguracion", @class = "form-horizontal" }))
        {
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group form-group-sm">
                        @Html.LabelFor(c => c.Ruta, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.Ruta, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="text-right">
                        <button id="btnExportar" class="btn btn-success" type="submit" title="Ejecutar">
                            <span class="glyphicon glyphicon-export" aria-hidden="true"></span>
                            Ejecutar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>