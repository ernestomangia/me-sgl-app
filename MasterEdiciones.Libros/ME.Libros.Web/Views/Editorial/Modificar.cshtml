@model ME.Libros.Web.Models.EditorialViewModel

<h3>Modificar editorial</h3>
@using (Html.BeginForm("Modificar", "Editorial", FormMethod.Post, new { id = "formEditorial", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)
    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="col-md-5">
            <div class="col-md-8 col-md-offset-4">
                <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalEliminarEditorial" title="Eliminar editorial">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Eliminar
                </button>
            </div>
        </div>
        <div class="col-md-5">
            <div class="text-right">
                <a class="btn btn-default btnCancelar" href="@Url.Action("Index")" title="Cancelar">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-warning" title="Modificar editorial">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Modificar
                </button>
            </div>
        </div>
    </div>
}

@Html.Partial("Eliminar")
<input type="hidden" id="idEntidad" value="@Model.Id" />
