@model IEnumerable<ME.Libros.Web.Models.LocalidadViewModel>

@{
    ViewBag.Title = "Localidades";
}

<h3>Localidades</h3>
<a id="btnNuevo" class="btn btn-success" href="#" role="button">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    Nuevo
</a>
<a class="btn btn-info" href="#" role="button">
    <span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
    Filtrar
</a>

<table class="table table-striped table-hover tablaCustom">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
        <th>@Html.DisplayName("Provincia")</th>
        <th>Acciones</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr id=@("tr_"+ item.Id)>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Provincia.Nombre)</td>
            <td>
                <a class="btn btn-info btn-sm" type="button" onclick="javascript:cargarPestaña('@Url.Action("Detalle", "Localidad", new { idLocalidad = item.Id})');">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                </a>
                <a class="btn btn-warning btn-sm" type="button" onclick="javascript:cargarPestaña('@Url.Action("Modificar", "Localidad", new { idLocalidad = item.Id })');">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <button class="btn btn-danger btn-sm" type="button" data-toggle="modal" data-target="#modalEliminarLocalidad" onclick="javascript:setearId(@item.Id);">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    }
</table>

<input type="hidden" id="idEntidad" />

<!-- Modal -->
<div class="modal fade" id="modalEliminarLocalidad" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Eliminar Localidad</h4>
            </div>
            <div class="modal-body">
                ¿Esta seguro que desea eliminar la localidad?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button id="btnAceptar" type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#btnNuevo").on("click", function () {
        cargarPestaña('@Url.Action("Crear", "Localidad")');
    });

    $("#btnAceptar").on("click", function () {
        var id = $("#idEntidad").val();
        eliminarEntidad("@Url.Action("Eliminar", "Localidad")", "Localidad Nº " + id + " eliminada exitosamente", "Error al eliminar la localidad. Intente nuevamente.");
    });
</script>

