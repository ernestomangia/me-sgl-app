@model ME.Libros.Web.Models.LocalidadViewModel

<h3>Modificar localidad</h3>
@using (Html.BeginForm("Modificar", "Localidad", FormMethod.Post, new { id = "formLocalidad", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)

    <div class="row">
        <div class="col-md-5">
            <div class="alert alert-danger validationSummary @(ViewData.ModelState.IsValid ? "hide" : "")" role="alert">
                <a class="close" data-hide="alert" aria-hidden="true">×</a>
                <b>Mensajes:</b>
                @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationSummary().ToString()))
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="col-md-2"></div>
            <div class="col-md-4">
                <button class="btn btn-danger floatLeft" type="button" data-toggle="modal" data-target="#modalEliminar" title="Eliminar la localidad">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Eliminar
                </button>
                <div class="text-right">
                    <a class="btn btn-default" href="@Url.Action("Index")" title="Cancelar">
                        <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning" title="Modificar la localidad">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Modificar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<input type="hidden" id="idEntidad" value="@Model.Id" />
@Html.Partial("Eliminar")