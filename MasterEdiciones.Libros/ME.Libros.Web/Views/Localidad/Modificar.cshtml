@model ME.Libros.Web.Models.LocalidadViewModel

<h3 class="page-header">Modificar localidad</h3>
@using (Html.BeginForm("Modificar", "Localidad", FormMethod.Post, new { id = "formLocalidad", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)

    <div class="row">
        <div class="col-md-5">
            <div class="text-right">
                <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalEliminar" title="Eliminar localidad">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Eliminar
                </button>
                <a class="btn btn-default btnCancelar" href="@Url.Action("Index")" title="Cancelar">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-warning" title="Modificar localidad">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Modificar
                </button>
            </div>
        </div>
    </div>
}

<input type="hidden" id="idEntidad" value="@Model.Id" />
@Html.Partial("Eliminar")