@model ME.Libros.Web.Models.LocalidadViewModel

@if (Model.Id > 0)
{
    <div class="row">
        <div class="col-md-10">
            <div class="form-group form-group-sm">
                @Html.LabelFor(c => c.Id, new { @class = "col-md-2 control-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(c => c.Id, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            @Html.LabelFor(l => l.Nombre, new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                @Html.TextBoxFor(l => l.Nombre, new { @class = "form-control", placeholder = "Nombre" })
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            @Html.LabelFor(l => l.ProvinciaId, new { @class = "col-sm-2 control-label" })
            <div class="col-md-4">
                @Html.DropDownListFor(l => l.ProvinciaId, Model.Provincias, "Seleccione", new { @class = "form-control", placeholder = Messages.Provincia })
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <div class="form-group">
            @Html.LabelFor(l => l.Zona.Id,Messages.Zona, new { @class = "col-sm-2 control-label" })
            <div class="col-md-4">
                @Html.DropDownListFor(l => l.Zona.Id, Model.Zonas, new { @class = "form-control", placeholder = Messages.Zona })
            </div>
        </div>
    </div>
</div>