@model ME.Libros.Web.Models.LocalidadViewModel

<div class="form-group form-group-sm">
    @Html.LabelFor(l => l.Nombre, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.TextBoxFor(l => l.Nombre, new { @class = "form-control", placeholder = "Nombre", required = "required" })
    </div>
</div>

<div class="form-group form-group-sm">
    @Html.LabelFor(l => l.Provincia, new { @class = "col-sm-1 control-label" })
    <div class="col-sm-3">
        @Html.DropDownListFor(l => l.Provincia, Model.Provincias, "Seleccione", new { @class = "form-control", placeholder = "Provincia", required = "required" })
    </div>
</div>