@model ME.Libros.Web.Models.PlanPagoViewModel

<h3 class="page-header">Nuevo plan de pago</h3>
@using (Html.BeginForm("Crear", "PlanPago", FormMethod.Post, new { id = "formPlanPago", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)

    <div class="row">
        <div class="col-md-10">
            <div class="text-right">
                <a id="btnCancelar" class="btn btn-default" href="@Url.Action("Index")">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Crear
                </button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".cantidadCuotas").rules("add", {
            min: 2,
            messages: {
                min: "La <b>Cantidad de cuotas</b> debe ser mayor a 1"
            }
        });

        $(".monto").rules("add", {
            min: 1,
            messages: {
                min: "El <b>Monto</b> no puede ser 0"
            }
        });
    });
</script>