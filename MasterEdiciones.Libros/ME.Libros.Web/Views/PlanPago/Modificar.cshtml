@model ME.Libros.Web.Models.PlanPagoViewModel

<h3>Modificar plan de pago</h3>
@using (Html.BeginForm("Modificar", "PlanPago", FormMethod.Post, new { id = "formPlanPago", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="col-md-5">
            <div class="col-md-8 col-md-offset-4">
                <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalEliminarPlanPago" title="Eliminar">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    Eliminar
                </button>
            </div>
        </div>
        <div class="col-md-5">
            <div class="text-right">
                <a class="btn btn-default" href="@Url.Action("Index")" title="Cancelar">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-warning" title="Modificar">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Modificar
                </button>
            </div>
        </div>

    </div>
    <br />
    <div class="row">
        <div class="col-md-5">
            <div class="col-md-8 col-md-offset-4">
                <div id="mensajediv" style="display:none">
                    <span class="label label-info"> El plan que intenta modificar se encuentra utilizado en alguna venta vigente, solo es posible modificar el nombre y/o descripción</span>
                </div>
            </div>
        </div>
    </div>
}

@Html.Partial("Eliminar")
<input type="hidden" id="idEntidad" value="@Model.Id" />
<input type="hidden" id="idBandera" value="@Model.Modificable" />

<script type="text/javascript">
    $(document).ready(function () {
        if ($("#idBandera").val()) {
            $("#mensajediv").show();
            $(".cantidadCuotas").attr("disabled", "disabled");
            $(".monto").attr("disabled", "disabled");
            $(".tipoPlan").attr("disabled", "disabled");
        }
    });
</script>
