@model IEnumerable<ME.Libros.Web.Models.ProductoViewModel>

<h3>Productos</h3>
<a class="btn btn-success btnNuevo" href="@Url.Action("Crear")" role="button">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    Nuevo
</a>

<table class="dataTableCustom">
    <thead>
        <tr>
            <th class="columnaCodigo no-sort">@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th class="numero">@Html.DisplayNameFor(model => model.Stock)</th>
            <th class="numero">@Html.DisplayNameFor(model => model.PrecioVenta)</th>
            <th>@Html.DisplayNameFor(model => model.Editorial)</th>
            <th>@Html.DisplayNameFor(model => model.Rubro)</th>
            <th class="columnaAcciones">Acciones</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr id=@("tr_"+ item.Id)>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
            <td class="text-right">@Html.DisplayFor(modelItem => item.Stock)</td>
            <td class="text-right">@Html.DisplayFor(modelItem => item.PrecioVenta)</td>
            <td>@Html.DisplayFor(modelItem => item.Editorial.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Rubro.Nombre)</td>
            <td>
                <a class="btn btn-warning btn-sm btnModificar" type="button" href="@Url.Action("Modificar", new { id = item.Id})" title="Modificar producto">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <button class="btn btn-danger btn-sm btnEliminar" type="button" data-toggle="modal" data-target="#modalEliminarProducto" onclick="javascript:setearId(@item.Id);" title="Eliminar producto">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    }
</table>

@Html.Partial("Eliminar")
<input type="hidden" id="idEntidad" />