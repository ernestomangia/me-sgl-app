@model IEnumerable<ME.Libros.Web.Models.RendicionViewModel>

<h3>Rendiciones</h3>
<a class="btn btn-success btnNuevo" href="@Url.Action("Crear")" role="button">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    Nuevo
</a>
<table class="dataTableCustom">
    <thead>
        <tr>
            <th class="columnaCodigo noSort">@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Periodo)</th>
            <th>@Html.DisplayNameFor(model => model.CobradorId)</th>
            <th>@Html.DisplayNameFor(model => model.LocalidadId)</th>
            <th>@Html.DisplayNameFor(model => model.MontoFacturado)</th>
            <th>@Html.DisplayNameFor(model => model.MontoComision)</th>
            <th>@Html.DisplayNameFor(model => model.MontoNeto)</th>
            <th class="columnaAcciones">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rendicion in Model)
        {
            <tr id=@("tr_" + rendicion.Id)>
                <td>@Html.DisplayFor(modelItem => rendicion.Id)</td>
                <td class="text-capitalize">@Html.DisplayFor(modelItem => rendicion.Periodo)</td>
                <td>@Html.DisplayFor(modelItem => rendicion.Cobrador.Apellido), @Html.DisplayFor(modelItem => rendicion.Cobrador.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => rendicion.Localidad.Nombre), @Html.DisplayFor(modelItem => rendicion.Localidad.Provincia.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => rendicion.MontoFacturado)</td>
                <td>@Html.DisplayFor(modelItem => rendicion.MontoComision)</td>
                <td>@Html.DisplayFor(modelItem => rendicion.MontoNeto)</td>
                <td>
                    <a class="btn btn-warning btn-sm btnModificar" type="button" href="@Url.Action("Modificar", new {id = rendicion.Id})" title="Modificar cliente">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <button class="btn btn-danger btn-sm btnEliminar" type="button" data-toggle="modal" data-target="#modalEliminarCliente" onclick="javascript:setearId(@rendicion.Id);" title="Eliminar cliente">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="idEntidad" />
