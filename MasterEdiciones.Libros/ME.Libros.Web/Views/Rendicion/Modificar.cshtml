@model ME.Libros.Web.Models.RendicionViewModel

<h3>Modificar rendición</h3>
<h5>
    No podrá modificar ni el Cobrador ni la Localidad. Si dichos datos son incorrectos, deberá anularla y volverla a crear correctamente.
</h5>
<hr>
@using (Html.BeginForm("Modificar", "Rendicion", FormMethod.Post, new { id = "formRendicion", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CobradorId)
    @Html.HiddenFor(model => model.LocalidadId)
    <div class="row">
        <div class="col-md-12">
            <div class="text-right">
                <a id="btnCancelar" class="btn btn-default" href="@Url.Action("Index")">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
                <button type="submit" class="btn btn-warning" title="Modificar rendición">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    Modificar
                </button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#CobradorId, #LocalidadId").attr("disabled", "disabled");
        $("#PeriodoFake").datepicker("setDate", $("#Periodo").datepicker('getDate'));
    });
</script>