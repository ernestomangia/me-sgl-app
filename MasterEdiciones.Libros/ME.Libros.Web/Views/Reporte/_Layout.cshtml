@using ME.Libros.Utils.Enums
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-navbar-custom.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/DataTablesCustom/boostrap/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.custom.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-switch/bootstrap3/bootstrap-switch.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    @* Scripts *@
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/bootstrap-switch.js"></script>
    <script src="~/Scripts/bootstrap-switch-custom.js"></script>
    <script src="~/Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTablesCustom/boostrap/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/DataTablesCustom/jquery.dataTables.config.custom.js"></script>
    <script src="~/Scripts/DataTablesCustom/jquery.dataTables.custom.js"></script>
    <script src="~/Scripts/common.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-default-custom navbar-fixed-top">
        <div class="container">
            <div class="navbar-header navbar-left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<a class="navbar-brand" href="@Url.Action("Index", "Cliente")">SGL</a>*@
            </div>
            <div class="navbar-collapse collapse navbar-left">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        @Html.ActionLink("Administración", "Index", "Cliente")
                    </li>
                    <li>
                        @Html.ActionLink("Ventas", "Index", "Venta", new { estado = EstadoVenta.Vigente }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Compras", "Index", "Compra", new { estado = EstadoCompra.Pagada }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Tesoseria", "Index", "Rendicion")
                    </li>
                    <li>
                        @Html.ActionLink("Reportes", "Index", "Reporte")
                    </li>
                    <li>
                        @Html.ActionLink("Sistema", "Index", "Usuario")
                    </li>
                    <li><a href="#">Ayuda</a></li>
                    <li>@Html.ActionLink("Salir", "Logout", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="navbar navbar-fixed-bottom navbar-default">
        <div class="container">
            <p></p>
            <div class="pull-left">
                <p class="text-muted">Sistema Gestion de Libros</p>
            </div>
            <div class="pull-right">
                <p class="text-muted">&copy; @DateTime.Now.Year, Todos los derechos reservados.</p>
            </div>
        </div>
    </div>
</body>
</html>