@using ME.Libros.Utils.Enums
@model ME.Libros.Web.Models.VentaViewModel

<script src="~/Scripts/venta.js"></script>

<h2>Modificar venta</h2>
@using (Html.BeginForm("Modificar", "Venta", FormMethod.Post, new { id = "formVenta", @class = "form-horizontal formEntidad" }))
{
    @Html.Partial("Shared/Form_Partial", Model)

    <div class="row">
        <div class="col-md-12">
            <div class="text-right">
                @if (Model.Estado == EstadoVenta.Vigente
                    || Model.Estado == EstadoVenta.Pagada)
                {
                    <button class="btn btn-danger" type="button" data-toggle="modal" data-target="#modalEliminar" title="Anular venta">
                        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                        Anular
                    </button>
                }
                <a class="btn btn-default" href="@Url.Action("Index", new { estado = ViewBag.MenuId == 23
                                                     ? (EstadoVenta?) null
                                                     : Model.Estado})" title="Cancelar">
                    <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                    Cancelar
                </a>
            </div>
        </div>
    </div>
}

<div id="contenedorVentaItem"></div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ventaDetalleTable").addClass("table table-striped table-hover hover table-bordered order-column KeyTable");
        $('#ventaDetalleTable').dataTable({
            "order": [],
            //"columnDefs": columna,
            "footerCallback": function (row, data, start, end, display) {
                calcularTotales(this, row, data, start, end, display);
            },
            lengthMenu: [5, 10],
        });

        $("#ventaCuotaTable").addClass("table table-striped table-hover hover table-bordered order-column KeyTable");
        $('#ventaCuotaTable').dataTable({
            "columns": [
                {
                    "class": "details-control",
                    "orderable": false
                    //"data": null,
                    //"defaultContent": ""
                },
                { "data": "nro" },
                { "data": "monto" },
                { "data": "vencim" },
                { "data": "estado" },
                { "data": "interes" },
                { "data": "cobrado" },
                { "data": "fechaCobro" },
                { "data": "atraso" },
                { "data": "saldo" }
            ]
        });

        $("#FechaVenta").attr("disabled", "disabled");
        $("#FechaCobro").attr("disabled", "disabled");
        $("#ClienteId").attr("disabled", "disabled");
        $("#CobradorId").attr("disabled", "disabled");
        $("#VendedorId").attr("disabled", "disabled");
        $("#VendedorId").attr("disabled", "disabled");
        $("#PlanPagoId").attr("disabled", "disabled");
        $("#MontoVendido").attr("disabled", "disabled");
    });

    function format(d) {
        return '<div class="slider">' +
                    '<table cellpadding="5" cellspacing="0" border="0" style="padding-left:50px;">' +
                        '<tr>' +
                            '<td>Full name:</td>' +
                            '<td>' + d.name + '</td>' +
                        '</tr>' +
                        '<tr>' +
                            '<td>Extension number:</td>' +
                            '<td>' + d.extn + '</td>' +
                        '</tr>' +
                        '<tr>' +
                            '<td>Extra info:</td>' +
                            '<td>And any further details here (images etc)...</td>' +
                        '</tr>' +
                    '</table>' +
                '</div>';
    }

    $('#ventaCuotaTable tbody').on('click', 'tr td.details-control', function () {
        var dt = $('#ventaCuotaTable').DataTable();
        var tr = $(this).closest('tr');
        var row = dt.row(tr);

        if (row.child.isShown()) {
            // This row is already open - close it
            $('div.slider', row.child()).slideUp(function () {
                row.child.hide();
                tr.removeClass('shown');
            });
        }
        else {
            // Open this row
            row.child(format(row.data()), 'no-padding').show();
            tr.addClass('shown');

            $('div.slider', row.child()).slideDown();
        }
    });
</script>

<style>
    div.slider {
        display: none;
    }

    table.dataTable tbody td.no-padding {
        padding: 0;
    }
</style>