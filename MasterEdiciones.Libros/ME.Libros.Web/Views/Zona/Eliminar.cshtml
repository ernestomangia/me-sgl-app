@using ME.Libros.Web.Models


<!-- Modal -->
<div class="modal fade modalEliminar" id="modalEliminarZona" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Eliminar zona</h4>
            </div>
            <div class="modal-body">
                ¿Esta seguro que desea eliminar @(Model is ZonaViewModel ? "esta zona" : "la zona seleccionada")?
            </div>
            <div class="modal-footer">
                <div class="row text-left">
                    <div class="col-md-12">
                        <div class="alert alert-danger validationSummary hide" role="alert">
                            <a class="close" data-hide="alert" aria-hidden="true">×</a>
                            <b>Mensajes:</b>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-default btnCancelarEliminar" data-dismiss="modal">Cancelar</button>
                <button id="btnAceptar" type="button" class="btn btn-primary">Aceptar</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">

        $("#btnAceptar").on("click", function () {
            var id = $("#idEntidad").val();
            var success = ('@Messages.EntidadEliminada').replace("{0}", '@Messages.LaZona').replace("{1}", id);
            eliminarEntidad("@Url.Action("Eliminar")", success, '@ErrorMessages.ErrorEliminar');
        });

</script>
